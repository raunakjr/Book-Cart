<!-- Header -->
<header class="bg-gradient-to-r from-gray-900 to-gray-800 text-white shadow-lg">
  <div class="container mx-auto flex justify-between items-center py-4 px-6">
    <!-- Left: Navigation Links -->
    <nav class="flex space-x-6 text-lg">
      <a href="/" class="hover:text-blue-400 transition duration-300"
        >🏠 Home</a
      >
      <a href="/shop" class="hover:text-blue-400 transition duration-300"
        >🛒 Shop</a
      >
      <a href="/cart" class="hover:text-blue-400 transition duration-300"
        >🛍️ Cart</a
      >
      <a href="/myaccount" class="hover:text-blue-400 transition duration-300"
        >👤 My Account</a
      >
    </nav>

    <!-- Right: Admin, Login, Logout -->
    <div class="flex space-x-4 text-lg">
      <a href="/admininfo" class="hover:text-green-400 transition duration-300"
        >🔧 Admin</a
      >
      <a href="/" class="hover:text-red-400 transition duration-300"
        >🔑 Login</a
      >
      <a
        href="/users/logout"
        class="hover:text-yellow-400 transition duration-300"
        >🚪 Logout</a
      >
    </div>

    <!-- Mobile Menu Button -->
    <button id="menu-toggle" class="lg:hidden text-white focus:outline-none">
      <svg
        class="w-8 h-8"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M4 6h16M4 12h16M4 18h16"
        />
      </svg>
    </button>
  </div>

  <!-- Mobile Menu (Hidden by Default) -->
  <div id="mobile-menu" class="hidden bg-gray-900 lg:hidden py-4 px-6">
    <a href="/" class="block py-2 hover:text-blue-400">🏠 Home</a>
    <a href="/shop" class="block py-2 hover:text-blue-400">🛒 Shop</a>
    <a href="/cart" class="block py-2 hover:text-blue-400">🛍️ Cart</a>
    <a href="/myaccount" class="block py-2 hover:text-blue-400"
      >👤 My Account</a
    >
    <a href="/admininfo" class="block py-2 hover:text-green-400">🔧 Admin</a>
    <a href="/" class="block py-2 hover:text-red-400">🔑 Login</a>
    <a href="/users/logout" class="block py-2 hover:text-yellow-400"
      >🚪 Logout</a
    >
  </div>
</header>

<script>
  document.getElementById("menu-toggle").addEventListener("click", function () {
    document.getElementById("mobile-menu").classList.toggle("hidden");
  });
</script>
