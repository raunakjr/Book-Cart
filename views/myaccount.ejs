<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Account</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-900 text-white">
    <!-- Include Header -->
    <%- include("./headers") %>

    <!-- Logout Button -->
    <div class="absolute top-6 right-6"></div>

    <div class="container mx-auto py-10 px-6">
      <h1 class="text-4xl font-bold text-center text-gray-300 mb-10">
        My Account
      </h1>

      <div class="bg-gray-800 p-8 rounded-2xl shadow-2xl max-w-lg mx-auto">
        <div class="flex items-center space-x-6 mb-6">
          <!-- Display Profile Picture -->
          <img
            src="data:image/jpeg;base64,<%= user.picture && user.picture.toString('base64') %>"
            alt="Profile Picture"
            class="w-24 h-24 rounded-full border-4 border-gray-500 shadow-lg"
          />

          <div>
            <h2 class="text-2xl font-semibold text-gray-100">
              Welcome, <%= user.fullname %>!
            </h2>
            <p class="text-sm text-gray-400 mt-1">
              ‚úâÔ∏è Email: <span class="text-gray-300"><%= user.email %></span>
            </p>
            <p class="text-sm text-gray-400 mt-1">
              üè∑ Name: <span class="text-gray-300"><%= user.fullname %></span>
            </p>
            <p class="text-sm text-gray-400 mt-1">
              üìû Contact: <span class="text-gray-300"><%= user.contact %></span>
            </p>
          </div>
        </div>

        <!-- Update Profile Button -->
        <div class="mt-8 text-center">
          <a
            href="/update-profile"
            class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 text-lg rounded-lg font-semibold transition-all shadow-md"
          >
            Update Profile
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
